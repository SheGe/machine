root = true

[*{.json,.json.override}]
charset = utf-8
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = false
end_of_line = lf

[*.ps1]
charset = utf-8
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = false
end_of_line = crlf

[*.md]
charset = utf-8
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.nuspec]
charset = utf-8
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = crlf

[*.gitconfig]
charset = utf-8
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = false
end_of_line = lf